
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    h1 {
      color: #333;
      margin-bottom: 20px;
    }

    p {
      margin: 10px 0;
      color: #666;
    }

    h3 {
      color: #444;
    }

    label {
      font-weight: bold;
      display: block;
      margin-top: 10px;
    }

    input[type="text"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    input[type="submit"] {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #0056b3;
    }
  </style>
  <h1>Passenger Information</h1>

  <p>Selected Flight: <%= @flight.departure_airport.code %> to <%= @flight.arrival_airport.code %> departing at <%= @flight.start_datetime %> (Duration: <%= @flight.flight_duration %> hours)</p>

  <%= form_for @booking do |f| %>
    <%= f.hidden_field :flight_id, value: @flight.id %>
    <%= f.fields_for :passengers do |p| %>
      <h3>Passenger <%= p.index + 1 %></h3>
      <%= p.label :name, 'Name' %>
      <%= p.text_field :name %>
      <%= p.label :email, 'Email' %>
      <%= p.text_field :email %>
    <% end %>
    <%= f.submit 'Continue to Booking' %>
  <% end %>
